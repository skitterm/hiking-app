<table>
    <thead>
        <tr>
            <td class="table-name">Name</td>
            <td class="table-area">Area</td>
            <td class="table-distance">Distance</td>
            <td class="table-elevation">Elev. Gain</td>
        </tr>
    </thead>
    <tbody>        
        {{#each hikes}}
            <tr>
                <td>{{name}}</td>
                <td>{{area}}</td>
                <td>{{distance}} mi</td>
                <td>{{elevationGain}} ft</td>
            </tr>
        {{/each}}
        {{#unless hikes.length}}
            <tr class="empty-row">
                <td>Sorry, no hikes found.</td>
            </tr>
        {{/unless}}
    </tbody>
</table>